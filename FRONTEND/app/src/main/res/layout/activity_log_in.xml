<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_20sdp"
        android:background="@drawable/custom_edittext_login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_15sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="@dimen/_36sdp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/main"/>

            <View
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/edtEmail_signIn"
                android:background="@drawable/custom_edittext_login"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="Email"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="@dimen/_20sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/edtPassword_signIn"
                android:background="@drawable/custom_edittext_login"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="Password"
                android:padding="@dimen/_8sdp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/txt_SaiThongTin"
                android:text="Sai thông tin đăng nhập!"
                android:visibility="gone"
                android:textColor="#F44336"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/btnSignIn"
                android:text="SIGN IN"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/main"
                app:cornerRadius = "@dimen/_20sdp"/>

            <TextView
                android:id="@+id/txtForgot"
                android:gravity="right"
                android:text="Forgot your password?"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Don't you have account?"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtSignUp_Login"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Sign Up"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>