<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".activity.AddressUserActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddressUser"
        app:title="Sửa Địa Chỉ"
        android:background="@color/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="@dimen/_5sdp"
            android:text="Liên hệ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="@drawable/edittext_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtUsername_Order"
            android:textAlignment="textStart"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:text=""
            android:hint="Họ và tên"
            android:background="@drawable/edittext_no_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@drawable/edittext_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPhone_Order"
            android:layout_margin="@dimen/_10sdp"
            android:textAlignment="textStart"
            android:textSize="@dimen/_15sdp"
            android:text=""
            android:hint="Số điện thoại"
            android:background="@drawable/edittext_no_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@drawable/edittext_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="@dimen/_5sdp"
            android:text="Địa Chỉ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="@drawable/edittext_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>
<!--        <com.google.android.material.textfield.TextInputEditText-->
<!--            android:textAlignment="textEnd"-->
<!--            android:layout_margin="@dimen/_10sdp"-->
<!--            android:textSize="@dimen/_15sdp"-->
<!--            android:hint="..."-->
<!--            android:background="@drawable/edittext_no_underline"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->
<!--        <View-->
<!--            android:background="@drawable/edittext_bottom_line"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp">-->
<!--        </View>-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtAddress_Order"
            android:layout_margin="@dimen/_10sdp"
            android:textAlignment="textStart"
            android:textSize="@dimen/_15sdp"
            android:text=""
            android:hint="......"
            android:background="@drawable/edittext_no_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@drawable/edittext_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>

    </LinearLayout>
    <!--    <LinearLayout-->
    <!--        android:layout_weight="1"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:orientation="vertical">-->

    <!--        <androidx.recyclerview.widget.RecyclerView-->
    <!--            android:layout_margin="10dp"-->
    <!--            android:id="@+id/recyclerViewDatHang"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"-->
    <!--            />-->
    <!--    </LinearLayout>-->


    <View
        android:background="@drawable/edittext_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDatHang"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/reddit"
        android:text="Hoàn Thành">
    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>