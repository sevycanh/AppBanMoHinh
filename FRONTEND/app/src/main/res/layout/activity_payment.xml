<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PaymentActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarPayment"
        app:title="Thanh toán"
        android:background="@color/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/btnChangeAddress"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:text="Địa chỉ nhận hàng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtThongTinKH"
                android:text="Customer | 0333666999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtDiaChiKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99 An Duong Vuong Phuong 16 Quan 8 Thanh Pho Ho Chi Minh" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <!--    <LinearLayout-->
    <!--        android:layout_weight="1"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:orientation="vertical">-->

    <!--        <androidx.recyclerview.widget.RecyclerView-->
    <!--            android:layout_margin="10dp"-->
    <!--            android:id="@+id/recyclerViewDatHang"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"-->
    <!--            />-->
    <!--    </LinearLayout>-->


    <View
        android:background="@drawable/edittext_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textSize="@dimen/_13ssp"
            android:text="Lưu ý: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtLuuYDatHang"
            android:textAlignment="textEnd"
            android:textSize="@dimen/_13ssp"
            android:hint="lời nhắn cho cửa hàng..."
            android:background="@drawable/edittext_no_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@drawable/edittext_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/_13ssp"
            android:text="Tổng tiền: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/red"
            android:text="₫"/>
        <TextView
            android:id="@+id/txtTongTienDatHang"
            android:textSize="@dimen/_13ssp"
            android:text="100.000"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@drawable/edittext_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
    <LinearLayout
        android:id="@+id/btnChangePaymentMethod"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/_13ssp"
            android:text="Phương thức thanh toán"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"/>
        <TextView
            android:id="@+id/txtPTThanhToan"
            android:layout_weight="1"
            android:textSize="@dimen/_13ssp"
            android:textAlignment="textEnd"
            android:text="COD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@drawable/edittext_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDatHang"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/reddit"
        android:text="Đặt Hàng">
    </androidx.appcompat.widget.AppCompatButton>
</LinearLayout>