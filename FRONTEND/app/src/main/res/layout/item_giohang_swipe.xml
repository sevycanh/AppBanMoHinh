<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/surfaceLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:padding="10dp">
        <CheckBox
            android:gravity="center"
            android:id="@+id/checkboxGioHang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/imageSanPhamGioHang"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_width="95dp"
            android:layout_height="95dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_13ssp"
                android:id="@+id/txtTenSanPhamGioHang"
                android:text="GOKU SSJ 4"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/red"
                    android:text="₫"/>

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:id="@+id/txtGiaSanPhamGioHang"
                    android:textColor="@color/red"
                    android:text="120.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtGiaSanPhamGH"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray"
                    android:text="₫150.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shape"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemGioHang_Tru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_remove" />

                <TextView
                    android:background="@drawable/background_shape"
                    android:id="@+id/txtSoLuongSanPhamGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="1"
                    android:textSize="@dimen/_13ssp" />

                <ImageView
                    android:id="@+id/itemGioHang_Cong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_add" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView

                    android:src="@drawable/equal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtTongGiaSanPhamGioHang"
                    android:textSize="@dimen/_13ssp"
                    android:text="120.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>