<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lucky"
    tools:context=".activity.MiniGameActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMiniGame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/main"
        app:title="Hộp quà may mắn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Minigame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_18ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarMiniGame">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:src="@drawable/icon_coin" />

            <TextView
                android:id="@+id/txtcoin_luckybox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="999999999"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtSlotLuckyBox"
        app:layout_constraintTop_toBottomOf="@+id/cardView_Minigame"
        android:text="Bạn còn 3/3 lượt"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_Minigame">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/luckyBox1"
            android:layout_weight="1"
            app:lottie_rawRes="@raw/box2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/luckyBox2"
            android:layout_weight="1"
            app:lottie_rawRes="@raw/box2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/luckyBox3"
            android:layout_weight="1"
            app:lottie_rawRes="@raw/box2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>