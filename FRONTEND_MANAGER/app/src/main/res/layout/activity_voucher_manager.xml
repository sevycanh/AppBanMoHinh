<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VoucherManagerActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarVoucher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Quản Lí Voucher"
        android:background="@color/main">
        <ImageView
            android:id="@+id/imgThemVoucher"
            android:src="@drawable/ic_add_voucher"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_gravity="right"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/line1"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBarVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtKhoVoucher_Voucher"
                android:gravity="center"
                android:text="Kho voucher"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"/>
            <View
                android:id="@+id/viewKhoVoucher"
                android:background="@color/main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"/>
        </LinearLayout>
        <View
            android:background="@color/black"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtDanhRieng_Voucher"
                android:gravity="center"
                android:text="Dành riêng"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"/>
            <View
                android:id="@+id/viewDanhRiengVoucher"
                android:visibility="gone"
                android:background="@color/main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#D6D6D6"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvVoucher_Manager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>